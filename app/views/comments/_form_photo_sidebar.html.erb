<% if @comment.new_record? == true %>
  <%= form_for([@comment], :remote => true, :validate => true) do |f| %>
    <div class="field">
      <%= f.text_area :content, :validate => true, :placeholder => "What's in your mind?", :class => "textarea_sidebar comment_content_#{commentable.id}" %>
    </div>
    <div class="field">
      <%= f.hidden_field :commentable_id, :value => commentable.id %>
    </div>
    <div class="field">
      <%= f.hidden_field :commentable_type, :value => commentable.class.to_s %>
    </div>
    <div class="actions right_div">
      <%= f.submit "Post comment", :class => "general-button" %>
    </div>
  <% end %>
<% end %>
