<% if @comment.new_record? == true %>
  <%= form_for([@comment], :remote => true, :validate => true) do |f| %>
    <div class="field">
      <%= f.text_area :content, :validate => true, :placeholder => t(".content_placeholder") %>
    </div>
    <div class="field">
      <%= f.hidden_field :commentable_id, :value => commentable.id %>
    </div>
    <div class="field">
      <%= f.hidden_field :commentable_type, :value => commentable.class.to_s %>
    </div>
    <div class="actions right_div">
      <%= f.submit t(".submit"), :class => "general-button" %>
    </div>
    <div class="clear_float"></div>
    <%= render :partial => "shared/progress_indicator" %>
  <% end %>

<% else %>
  <%= form_for([@comment], :validate => true) do |f| %>
    <div class="field">
      <%= f.text_area :content, :validate => true, :placeholder => t(".content_placeholder") %>
    </div>
    <div class="field">
      <%= f.hidden_field :commentable_id, :value => commentable.id %>
    </div>
    <div class="field">
      <%= f.hidden_field :commentable_type, :value => commentable.class.to_s %>
    </div>
    <div class="actions right_div">
      <%= f.submit t(".submit"), :class => "general-button" %>
    </div>
    <div class="clear_float"></div>
  <% end %>

<% end %>
