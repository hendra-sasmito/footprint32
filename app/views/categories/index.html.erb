<% content_for :title, Footprint32::APP_NAME %>
<div class="page-container">
  <div id="content">
    <div class="padding">
      <div class="resource_container_blue">
        <div class="title_text"><%= t('.title') %></div>
      </div>
      <div class="resource_container">
        <div id="cloud">
          <% @categories.each do |category| %>
            <%= link_to category.name, category,  {:rel => category.places_count, :class => "hastip", :title => "#{category.places_count} #{t('.places')}"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div id="sidebar">
    <div class="padding">
    </div>
  </div>
</div>