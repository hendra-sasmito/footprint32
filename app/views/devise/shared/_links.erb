<% content_for :head do %>
  <meta property="og:url"    content="www.koedok.com" />
  <meta property="og:title"  content="www.koedok.com" />
  <meta property="og:site_name"  content="www.koedok.com" />
  <meta property="og:description"  content="Koedok is a traveler social media where you can make reviews about the places and share your awesome experiences to the world. Visit us: www.koedok.com" />
  <meta property="og:image"  content="<%= URI.join(root_url, image_path("koedok-logo.png")) %>" />
  <meta property="fb:app_id"  content="<%= Footprint32::Application.config.FB_APP_ID %>" />
  <meta property="og:type"  content="website" />
<% end %>
  
<%- if controller_name != 'sessions' %>
  <%= link_to t(".sign_in", :default => "Sign in"), new_session_path(resource_name), :class => "general" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(".sign_up", :default => "Sign up"), new_registration_path(resource_name), :class => "general" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name), :class => "general" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.didn_t_receive_confirmation_instructions', :default => "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), :class => "general" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('.didn_t_receive_unlock_instructions', :default => "Didn't receive unlock instructions?"), new_unlock_path(resource_name), :class => "general" %><br />
<% end -%>

<div class="general-padding">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% if provider.to_s == "google_oauth2" %>
      <%= link_to t('.sign_in_with_provider', :provider => "Google", :default => "Sign in with Google"), user_omniauth_authorize_path(provider), :class => "btn-auth btn-#{provider.to_s}" %><br />
      <% else %>
      <%= link_to t('.sign_in_with_provider', :provider => provider.to_s.titleize, :default => "Sign in with #{provider.to_s.titleize}"), user_omniauth_authorize_path(provider), :class => "btn-auth btn-#{provider.to_s}" %><br />
      <% end %>
    <% end -%>
  <% end -%>
</div>
<div class="fb-like" data-href="https://www.facebook.com/koedok" data-layout="standard" data-action="like" data-show-faces="false" data-share="false"></div>
<br/>
<div class="fb-share-button" data-href="http://www.koedok.com/" data-type="button_count"></div>