<% content_for :title, Footprint32::APP_NAME %>
<div id="header"></div>
<div class="page-container">
  <div id="content">
    <div class="padding">
      <div class="resource_container_blue">
        <div class="title_text"><%= t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions') %></div>
      </div>
      <div class="resource_container">
        <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= devise_error_messages! %>
          <div><%= f.email_field :email, :placeholder => t('activerecord.attributes.user.email') %></div>
          <div><%= f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), :class => "general-button" %></div>
        <% end %>
      </div>
    </div>
  </div>
  <div id="sidebar">
    <div class="padding">
      <div class="resource_container">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
