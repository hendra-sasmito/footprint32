<% if user_signed_in? and @user == current_user %>
  <% if (@requested_friends_count > 0) %>
    <div class="sidebar_container">
      <div class="info-section-title title_text notification_text"><%= t('.title')%></div>
      <div class="info-section-content">
        <% if @requested_friends_count > 0 %>
          <%= "#{t('.request_message')} #{@requested_friends_count} #{t('.friend_request')}" %> <br />
        <% end %>

        <%= link_to t(".all"), friendship_show_path, :class => "general right_menu" %>
      </div>
    </div>
  <% end %>
<% end %>