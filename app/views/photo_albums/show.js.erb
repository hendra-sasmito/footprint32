$('#photo_album_partial').html('<%= escape_javascript render(:partial => 'photo_albums/photo_lists', :locals => { :photos => @photos }) %>');
$('#paginator_photo_album').html('<%= escape_javascript(paginate(@photos, :remote => true, :param_name => "photo_album_page", :theme => "default").to_s) %>');

$("#mygallery").justifiedGallery({
  'sizeRangeSuffixes' : {'lt100':'', 'lt240':'', 'lt320':'', 'lt500':'', 'lt640':'', 'lt1024':''},
  'justifyLastRow':false,
  'rowHeight':120,
  'fixedHeight':false,
  'captions':false,
  'margins':5,
  'rel' : 'gallery',
  'onComplete': function(gallery) {
    $(gallery).find("a").addClass('fancybox-buttons');
  }
});