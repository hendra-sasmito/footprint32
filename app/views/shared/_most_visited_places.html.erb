<div class="info-box-title bold_text"><%= image_tag("bag-big.png") %> <%= t('.title')%></div>
<div class="info-box-content">
  <div class="general_box">
    <% places = most_visited_places() %>
    <% places.each do |place| %>
        <div class="hidden_box_container">
          <div class="general_box_list">
          <div class="general_box_image">
          <%= link_to image_tag(place_thumb_photo(place),
                  :class => "thumb_profile_pic imagedropshadow"), place_path(place) %>
          </div>
          <div class="general_box_content">
            <div class="general_box_text" >
            <%= place.name %>
            <%= place.visited_places_count %>
            </div>
          </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
